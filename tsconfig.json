{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "vitest/importMeta"]
  },
  "extends": "./tsconfig.paths.json",
  "include": [
    "src",
    "vite.config.ts",

    "postcss.config.js",
    "tailwind.config.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
